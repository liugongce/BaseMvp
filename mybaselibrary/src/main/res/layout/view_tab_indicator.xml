<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/view_tab_indicator_iv_icon"
        android:layout_width="@dimen/trans_40px"
        android:layout_height="@dimen/trans_39px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/trans_15px"
        tools:background="@color/blue"
        />

    <TextView
        android:id="@+id/view_tab_indicator_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_tab_indicator_iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/trans_10px"
        android:layout_marginTop="@dimen/trans_10px"
        android:text="首页"
        android:textColor="@color/trans_333333"
        android:textSize="@dimen/text_trans_20px"
        />

    <TextView
        android:id="@+id/view_tab_indicator_tv_dot"
        android:layout_width="@dimen/trans_12px"
        android:layout_height="@dimen/trans_12px"
        android:layout_alignRight="@+id/view_tab_indicator_iv_icon"
        android:layout_alignTop="@+id/view_tab_indicator_iv_icon"
        android:background="@drawable/shape_bg_rect_color_primary_r20px"
        android:gravity="center"
        android:minWidth="@dimen/trans_25px"
        android:paddingLeft="@dimen/trans_6px"
        android:paddingRight="@dimen/trans_6px"
        android:textColor="@color/white"
        android:textSize="@dimen/text_trans_18px"
        android:visibility="gone"
        tools:visibility="visible"
        />
</RelativeLayout>