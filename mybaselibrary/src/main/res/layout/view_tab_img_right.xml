<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    >

    <TextView
        android:lines="1"
        android:maxLength="5"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/trans_10px"
        android:id="@+id/view_tab_img_right_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/trans_333333"
        android:textSize="@dimen/text_trans_28px"
        tools:text="全部区域"
        />

    <ImageView
        android:id="@+id/view_tab_img_right_iv_icon"
        android:layout_width="@dimen/trans_26px"
        android:layout_height="@dimen/trans_14px"
        android:src="@drawable/icon_arrow_down"
        />

</LinearLayout>