<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TabIndicator的参数设置-->
    <declare-styleable name="PagerSlidingTab">
        <attr name="indicatorColor" format="color"/>
        <attr name="underlineColor" format="color"/>
        <attr name="dividerColor" format="color"/>
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="underlineHeight" format="dimension"/>
        <attr name="pst_dividerPadding" format="dimension"/>
        <attr name="tabPaddingLeftRight" format="dimension"/>
        <attr name="scrollOffset" format="dimension"/>
        <attr name="tabBackgrounds" format="reference"/>
        <attr name="sameLine" format="boolean"/>
        <attr name="pst_textAllCaps" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="WheelView">
        <attr name="unitHeight" format="dimension"/>
        <attr name="itemNumber" format="integer"/>

        <attr name="normalTextColor" format="color"/>
        <attr name="normalTextSize" format="dimension"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="selectedTextSize" format="dimension"/>

        <attr name="lineColor" format="color"/>
        <attr name="lineHeight" format="dimension"/>

        <attr name="maskHeight" format="dimension"/>
        <attr name="noEmpty" format="boolean"/>
        <attr name="isEnable" format="boolean"/>
    </declare-styleable>

    <!--自定义首页标签View-->
    <declare-styleable name="TabIndicatorView">
        <attr name="iv_src" format="reference"/>
        <attr name="iv_src_checked" format="reference"/>
        <attr name="tv_text" format="string"/>
        <attr name="tv_color" format="reference"/>
        <attr name="tv_color_checked" format="reference"/>
        <attr name="checked" format="boolean"/>
        <attr name="tv_dot_num" format="integer"/>
    </declare-styleable>

    <!--自定义圆形ImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="border_overlay" format="boolean"/>
    </declare-styleable>

    <!--右侧带图片(箭头)的View  TagImgRightView-->
    <declare-styleable name="TagImgRightView">
        <attr name="tirv_iv_src" format="reference"/>
        <attr name="tirv_iv_src_checked" format="reference"/>
        <attr name="tirv_tv_text" format="string"/>
        <attr name="tirv_tv_color" format="reference"/>
        <attr name="tirv_tv_color_checked" format="reference"/>
        <attr name="tirv_checked" format="boolean"/>
    </declare-styleable>

    <!--自定义圆角容器 RoundCornerLL-->
    <declare-styleable name="RoundCornerLL">
        <attr name="RoundCornerLL_roundLayoutRadius" format="dimension"/>
    </declare-styleable>

    <!--自定义圆角容器 RoundCornerRL-->
    <declare-styleable name="RoundCornerRL">
        <attr name="RoundCornerRL_roundLayoutRadius" format="dimension"/>
    </declare-styleable>

</resources>